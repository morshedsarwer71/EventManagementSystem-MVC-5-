@model EventManagement.Areas.EventManagement.Models.Lender
<section class="content-header">
    <h1>
        Edit Lender
        <small>adding edit Lender information</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("#")"><i class="fa fa-dashboard"></i> Home</a></li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="box">
            <!-- /.box-header -->
            <div class="box-body">
                @using (Html.BeginForm("EditLender", "EventManagementData", FormMethod.Post))
                {
                    <div class="col-md-6 col-sm-8">
                        <div class="form-group">
                            <label class="col-form-label">Name</label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <input type="text" class="form-control" name="LenderName" value="@Model.LenderName">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-form-label">Contact Number</label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <input type="text" class="form-control" name="LenderMobile"value="@Model.LenderMobile">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-form-label">Address</label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <textarea class="form-control" name="LenderAddress">@Model.LenderAddress</textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-form-label">Description</label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <textarea class="form-control" name="Description">@Model.Description</textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" value="submit" class="btn btn-primary"><i class="fa fa-plus"></i> ADD</button>
                        </div>

                    </div>
                }
            </div>
        </div>
    </div>
</section>