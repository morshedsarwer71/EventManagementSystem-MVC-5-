@model EventManagement.Areas.EventManagement.ViewModels.LoanViewModels
@{
    Layout = null;
}
<section class="content-header">
    <h1>
        Loan Installment
        <small>preview of Loan Installment</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
        <li><a href="#">Action</a></li>
        <li class="active">Lender</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <!-- /.box-header -->
                <div class="box-body">
                    @{ var sl = 0;}
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th style="width: 10px">#</th>
                                <th>Name</th>
                                <th>Date</th>
                                <th>Amount</th>
                                <th>Edit</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ResponseLoans)
                            {
                                sl++;
                                <tr>
                                    <td>@sl</td>
                                    <td>@item.Name</td>
                                    <td>@item.Date.ToShortDateString()</td>
                                    <td>@item.Amont</td>
                                    <td class="text-center"> <a href="@Url.Action("EditLoanInstallment","EventManagementData",new {id=item.Id })"><i class="fa fa-pencil" style="font-size:30px;"></i></a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
                <div class="box-footer clearfix">

                    <ul class="pagination pagination-sm no-margin pull-right">
                        <li><a href="#">&laquo;</a></li>
                        <li><a href="#">1</a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">&raquo;</a></li>
                    </ul>
                </div>
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->

    </div>
</section>