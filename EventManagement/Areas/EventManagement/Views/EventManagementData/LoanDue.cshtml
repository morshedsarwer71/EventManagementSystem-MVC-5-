@model EventManagement.Areas.EventManagement.ViewModels.LoanViewModels
<section class="content-header">
    <h1>
        Loans
        <small>preview of lonas</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
        <li><a href="#">Account</a></li>
        <li class="active">Loan</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-body">
                    @{ var sl = 0;}
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th style="width: 10px">#</th>
                                <th>Name</th>
                                <th>Total Loan</th>
                                <th>Paid Loan</th>
                                <th>Due Loan</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ResponseLoans)
                            {
                                sl++;
                                <tr>
                                    <td>@sl</td>
                                    <td>@item.Name</td>
                                    <td>@item.Amont</td>
                                    <td>@item.PaidAmount</td>
                                    <td>@item.DueAmount</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="box-footer clearfix">
                    <ul class="pagination pagination-sm no-margin pull-right">
                        <li><a href="#">&laquo;</a></li>
                        <li><a href="#">1</a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">&raquo;</a></li>
                    </ul>
                </div>
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->

    </div>
</section>