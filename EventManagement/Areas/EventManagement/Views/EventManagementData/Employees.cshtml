@model EventManagement.Areas.EventManagement.ViewModels.EmployeeViewModels

@{
    Layout = null;
}
<section class="content-header">
    <h1>
        Employees
        <small>preview of employee index</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
        <li><a href="#">Employee</a></li>
        <li class="active">Employees</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <!-- /.box-header -->
                <div class="box-body">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th style="width: 10px">#</th>
                                <th>Code</th>
                                <th>Name</th>
                                <th>Type</th>
                                <th>Mobile Num.</th>
                                <th>Monthly Salary</th>
                                <th>Passport Nub.</th>
                                <th>Emp. Image</th>
                                <th>Pass. Image</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Employees)
                            {
                                <tr>
                                    <td>@item.SerialNumber</td>
                                    <td>@item.EmployeeCode</td>
                                    <td>@item.FirstName @item.LastName</td>
                                    <td>@item.EmployeeEntitlement</td>
                                    <td>@item.ContactNumber</td>
                                    <td>@item.MonthlySalary</td>
                                    <td>@item.PassportNumber</td>
                                    <td><img src="@Url.Content(item.EmployeeImage)" width="70" height="40" /></td>
                                    <td><img src="@Url.Content(item.PassportImage)" width="70" height="40" /></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
                <div class="box-footer clearfix">

                    <ul class="pagination pagination-sm no-margin pull-right">
                        <li><a href="#">&laquo;</a></li>
                        <li><a href="#">1</a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">&raquo;</a></li>
                    </ul>
                </div>
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->

    </div>
</section>