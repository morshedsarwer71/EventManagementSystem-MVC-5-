@model EventManagement.Areas.EventManagement.Models.ManpowerSupplier
<section class="content-header">
    <h1>
        Manpower Supplier
        <small>updating new manpower supplier information</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("#")"><i class="fa fa-dashboard"></i> Home</a></li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="box">
            <!-- /.box-header -->
            <div class="box-body">
                <div class="col-md-6 col-sm-8">
                    @using (Html.BeginForm("EditManpowerSupplier", "EventManagementData", FormMethod.Post))
                    {
                        <div class="form-group">
                            <label class="col-form-label">Name</label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <input type="text" class="form-control" name="Name" value="@Model.Name">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-form-label">Contact Number</label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <input type="text" class="form-control" name="ContactNumber" value="@Model.ContactNumber">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-form-label">Address</label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <textarea class="form-control" name="Address">@Model.Address</textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-form-label">Description</label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <textarea class="form-control" name="Description" value="@Model.Description"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" value="submit" class="btn btn-primary"><i class="fa fa-plus"></i> UPDATE</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>