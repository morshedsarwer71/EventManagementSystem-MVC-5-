@model EventManagement.Areas.EventManagement.Models.EventService
<section class="content-header">
    <h1>
        Service
        <small>adding new event service information</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("#")"><i class="fa fa-dashboard"></i> Home</a></li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div id="dvLoader" class="LoadingDiv" style="display: none; margin-top:150px;margin-top:50px;">
        <center>
            <img src="~/Content/img/ajax-loader.gif" alt="Loading" />
        </center>
    </div>
    <div class="row">
        <div class="box">
            <!-- /.box-header -->
            <div class="box-body">
                <div class="col-md-6 col-sm-8">
                    @using (Html.BeginForm("EditService", "EventManagementData", FormMethod.Post))
                    {
                        <div class="form-group">
                            <label class="col-form-label">Service Name EN</label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <input type="text" value="@Model.EventServiceEN" class="form-control" name="EventServiceEN">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-form-label">Service Name AR</label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <input type="text" value="@Model.EventServiceAR" class="form-control" name="EventServiceAR">
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" value="submit" class="btn btn-primary"><i class="fa fa-plus"></i> UPDATE SERVICE</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
