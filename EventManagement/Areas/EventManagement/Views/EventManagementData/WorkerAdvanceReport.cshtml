@model EventManagement.Areas.EventManagement.ViewModels.TransactionViewModels
<section class="content-header">
    <h1>
        Worker Advance Report
        <small>preview of worker advance report</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
        <li><a href="#">Report</a></li>
        <li class="active">Worker Report</li>
    </ol>
</section>
<section class="content">
    <div id="dvLoader" class="LoadingDiv" style="display: none; margin-top:150px;margin-top:50px;">
        <center>
            <img src="~/Content/img/ajax-loader.gif" alt="Loading" />
        </center>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-body">
                    @{ var sl = 0;}
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th style="width: 10px">#</th>
                                <th>Name</th>
                                <th>Total Advance Due</th>
                            </tr>
                        </thead>
                        <tbody id="tBody">
                            @foreach (var item in Model.PaymentReport)
                            {
                                if (item.Total < 0)
                                {
                                    sl++;
                                    <tr>
                                        <td>@sl</td>
                                        <td>@item.Name</td>
                                        <td>@item.Total</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
                <div class="box-footer clearfix">
                    <ul class="pagination pagination-sm no-margin pull-right" style="margin-top:50px;">
                        <li><a href="#">&laquo;</a></li>
                        <li><a href="#">1</a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">&raquo;</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>