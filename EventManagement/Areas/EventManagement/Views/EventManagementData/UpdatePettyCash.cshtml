@model EventManagement.Areas.EventManagement.ViewModels.TransactionViewModels

<section class="content-header">
    <h1>
        Add Cash
        <small>adding new petty cash payment information</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("#")"><i class="fa fa-dashboard"></i> Home</a></li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="box">
            <!-- /.box-header -->
            <div class="box-body">
                <div class="col-md-6 col-sm-6">
                    @using(Html.BeginForm("UpdatePettyCash", "EventManagementData", FormMethod.Post))
    {
                <div class="form-group">
                    <label class="col-form-label">Payment Date <span style="color:red;"> *</span></label>
                    <div class="input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-calendar"></i>
                        </div>
                        <input type="text" class="form-control" value="@Model.PettyCash.CashDate.ToShortDateString()" name="CashDate" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-form-label">Transaction Type<span style="color:red;"> *</span></label>
                    <div class="input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-calendar"></i>
                        </div>
                        <select class="form-control" name="TransactionType">
                            @foreach (var item in Model.TransactionTypes)
            {
                if (Model.PettyCash.TransactionType == item.Id)
                {
                    <option selected="selected" value="@item.Id">@item.Name</option>
}
else
{
                <option value="@item.Id">@item.Name</option>
}
}
                        </select>
                    </div>
                </div>
                <div class="form-group" id="bank">
                    <label class="col-form-label">Bank <span style="color:red;"> *</span></label>
                    <div class="input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-calendar"></i>
                        </div>
                        <select class="form-control" name="BankId">
                            <option value="0">--select bank name--</option>
                            @foreach (var item in Model.Banks)
            {
                if (Model.PettyCash.BankId == item.BankId)
                {
                    <option selected="selected" value="@item.BankId">@item.BankNameEN</option>
}
else
{
                <option value="@item.BankId">@item.BankNameEN</option>
}

}
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-form-label">Payment Amount <span style="color:red;"> *</span></label>
                    <div class="input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-calendar"></i>
                        </div>
                        <input type="text" class="form-control" value="@Model.PettyCash.Amount" name="Amount"/>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-form-label">Description <span style="color:red;"> *</span></label>
                    <div class="input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-calendar"></i>
                        </div>
                        <textarea class="form-control" name="Description">@Model.PettyCash.Description</textarea>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        <button type="submit" value="submit" class="btn btn-primary"><i class="fa fa-plus"></i> UPDATE</button>
                    </div>
                </div>
}
                </div>
            </div>
        </div>
    </div>
</section>