@model EventManagement.Areas.EventManagement.ViewModels.ReportViewModels
<section class="content-header">
    <h1>
        Time Sheet Summary
        <small>preview of time sheet summary</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
        <li><a href="#">Report</a></li>
        <li class="active">Daily Time Sheet</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <!-- /.box-header -->
                <div class="box-body">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th style="width: 10px">#</th>
                                <th>Code</th>
                                <th>Date</th>
                                <th>Client Name</th>
                                <th>Time Sheet Code</th>
                                <th>Total Hour</th>
                                <th>Per Hour Rate</th>
                                <th>Total</th>
                                <th>Vat Amount</th>
                                <th>Grand</th>
                            </tr>
                        </thead>
                        @{ var sl = 0;}
                        <tbody>
                            @foreach (var item in Model.ResponseTimeSheets)
                            {
                                sl++;
                                <tr>
                                    <td>@sl</td>
                                    <td>@item.OrderCode</td>
                                    <td>@item.Date</td>
                                    <td>@item.ClientName</td>
                                    <td>@item.SheetCode</td>
                                    <td>@item.TotalHour</td>
                                    <td>@item.PerHourRate</td>
                                    <td>@item.TotalWithoutVat</td>
                                    <td>@item.VatAmount</td>
                                    <td>@item.TotalAfterVat</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
                <div class="box-footer clearfix">
                    <div class="col-md-4">
                        <a href="@Url.Action("TimeSheetSummary","EventManagementReport",new {id=ViewBag.id })" target="_blank"><i class="fa fa-file-pdf-o" style="color:red"></i> Export As PDF</a>
                        @*<button type="submit" id="btnPdf" style="display:none" value="submit"><i class="fa fa-eye"></i> VIEW</button>*@
                    </div>
                    <ul class="pagination pagination-sm no-margin pull-right"></ul>
                </div>
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->

    </div>
</section>