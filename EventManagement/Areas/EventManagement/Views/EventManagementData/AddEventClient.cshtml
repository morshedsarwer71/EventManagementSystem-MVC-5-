@{
    Layout = null;
}
<section class="content-header">
    <h1>
        Event Client
        <small>adding new event client information</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("#")"><i class="fa fa-dashboard"></i> Home</a></li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="box">
            <!-- /.box-header -->
            <div class="box-body">
                <div class="col-md-6 col-sm-8">
                    @using (Html.BeginForm("AddEventClient", "EventManagementData", FormMethod.Post))
                    {
                        <div class="form-group">
                            <label class="col-form-label">Event Client Code</label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <input type="text" required value="@DateTime.Now.ToString("mmddfff")" readonly="readonly" class="form-control" name="ClientCode">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-form-label">Client Name EN</label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <input type="text" required class="form-control" name="ClientNameEN">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-form-label">Client Name AR</label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <input type="text" required class="form-control" name="ClientNameAR">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-form-label">Client Tax Registration Number.</label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <input type="text" required class="form-control" name="TaxRegNumber">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-form-label">Client Mobile Num.</label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <input type="text" required class="form-control" name="ClientContactInfo">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-form-label">Client Address</label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <textarea class="form-control" name="ClientAddress"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" value="submit" class="btn btn-primary"><i class="fa fa-plus"></i> CLIENT</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>