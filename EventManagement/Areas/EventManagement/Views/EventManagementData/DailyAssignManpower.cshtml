@model EventManagement.Areas.EventManagement.Models.WorkOrderChildManpower
<section class="content-header">
    <h1>
        Man Power
        <small>adding man power</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("#")"><i class="fa fa-dashboard"></i> Home</a></li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div id="dvLoader" class="LoadingDiv" style="display: none; margin-top:150px;margin-top:50px;">
        <center>
            <img src="~/Content/img/ajax-loader.gif" alt="Loading" />
        </center>
    </div>
    <div class="row">
        <div class="box">
            <!-- /.box-header -->
            <div class="box-body">
                <div class="col-md-6 col-sm-8">
                    @{ var sl = 0;}
                    @using (Html.BeginForm("DailyAssignManpower", "EventManagementData", FormMethod.Post))

                    {
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="col-form-label">Date <span style="color:red;"> *</span></label>
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input type="text" name="Date" class="form-control" id="attDate" required>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th style="width: 10px">#</th>
                                        <th>Name</th>
                                        <th>Check Box</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @for (int i = 0; i < Model.Employee.Count; i++)
                                    {
                                        sl++;
                                        <tr>
                                            <td>@sl</td>
                                            <td>@Model.Employee[i].FirstName @Model.Employee[i].LastName</td>
                                            @Html.HiddenFor(x => x.Employee[i].EmployeeId)
                                            <td class="text-center">@Html.CheckBoxFor(x => x.Employee[i].IsChecked)</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="form-group">
                            <button type="submit" value="submit" class="btn btn-primary" style="margin-top:25px;"><i class="fa fa-plus"></i> EMPLOYEE</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts{
    <script src="~/Content/bower_components/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
    <script src="~/Content/bower_components/timepicker/bootstrap-timepicker.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#attDate').datepicker({
                format: 'yyyy-mm-dd',
                autoclose: true
                //startYear: '-10y'
            });
        });
    </script>

}