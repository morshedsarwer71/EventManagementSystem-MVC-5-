@model IEnumerable<EventManagement.Areas.EventManagement.Models.EventManagementClient>

@{
    Layout = null;
}
<section class="content-header">
    <h1>
        Event Clients
        <small>preview of event client</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
        <li><a href="#">clients</a></li>
        <li class="active">Clients</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <!-- /.box-header -->
                @{ var sl = 0;}
                <div class="box-body">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th style="width: 10px">#</th>
                                <th>Client EN</th>
                                <th>Client AR</th>
                                <th>Contact Number</th>
                                <th>Address</th>
                                <th>Edit</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                sl++;
                                <tr>
                                    <td>@sl</td>
                                    <td>@item.ClientNameEN</td>
                                    <td>@item.ClientNameAR</td>
                                    <td>@item.ClientContactInfo</td>
                                    <td>@item.ClientAddress</td>
                                    <td><a href="@Url.Action("EditEventClient","EventManagementData", new { id=item.ClientId})"><i class="fa fa-edit" style="font-size:20px;"></i></a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
                <div class="box-footer clearfix">

                    <ul class="pagination pagination-sm no-margin pull-right">
                        <li><a href="#">&laquo;</a></li>
                        <li><a href="#">1</a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">&raquo;</a></li>
                    </ul>
                </div>
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->

    </div>
</section>