@model EventManagement.Areas.EventManagement.ViewModels.TransactionViewModels
<section class="content-header">
    <h1>
        Worker Report
        <small>preview of worker report</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
        <li><a href="#">Employee</a></li>
        <li class="active">Worker Report</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div id="dvLoader" class="LoadingDiv" style="display: none; margin-top:150px;margin-top:50px;">
        <center>
            <img src="~/Content/img/ajax-loader.gif" alt="Loading" />
        </center>
    </div>
    <div class="row">
        <div class="col-md-12">

            <div class="col-md-3">
                <div class="form-group">
                    <label class="col-form-label">Employee</label>
                    <div class="input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-calendar"></i>
                        </div>
                        <select class="form-control" id="employee">
                            <option value="0">All</option>
                            @foreach (var item in Model.Employees)
                            {
                                <option value="@item.EmployeeId">@item.FirstName @item.LastName</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label class="col-form-label">Client</label>
                    <div class="input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-calendar"></i>
                        </div>
                        <select class="form-control" id="client">
                            <option value="0">All</option>
                            @foreach (var item in Model.Clients)
                            {
                                <option value="@item.ClientId">@item.ClientNameEN</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label class="col-form-label">From Date</label>
                    <div class="input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-calendar"></i>
                        </div>
                        <input type="text" class="form-control" id="fromDate" required />
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label class="col-form-label">To Date</label>
                    <div class="input-group">
                        <div class="input-group-addon">
                            <i class="fa fa-calendar"></i>
                        </div>
                        <input type="text" class="form-control" id="toDate" required />
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6" style="padding-left:30px;">
            <div class="form-group">
                <button type="submit" id="btnView" value="submit" class="btn btn-primary"><i class="fa fa-eye"></i> VIEW</button>
            </div>
        </div>
        <div class="col-md-12">
            <div class="box">
                <div class="box-body">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th style="width: 10px">#</th>
                                <th>Name</th>
                                <th>Date</th>
                                <th>Client</th>
                                <th>Event</th>
                                <th>In Time</th>
                                <th>Out Time</th>
                                <th>Total Hour</th>
                                <th>Per Hour Rate</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody id="tBody"></tbody>
                    </table>
                </div>
                <!-- /.box-body -->
                <div class="box-footer clearfix">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Total</label>
                            <input type="text" readonly="readonly" id="total" class="form-control" />
                        </div>
                    </div>
                    <ul class="pagination pagination-sm no-margin pull-right" style="margin-top:50px;">
                        <li><a href="#">&laquo;</a></li>
                        <li><a href="#">1</a></li>
                        <li><a href="#">2</a></li>
                        <li><a href="#">3</a></li>
                        <li><a href="#">&raquo;</a></li>
                    </ul>
                </div>
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->

    </div>
</section>
@section Scripts{
    <script src="~/Content/bower_components/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
    <script>
        $(document).ready(function () {
            $('#total').val('');
            $('#fromDate').datepicker({
                format: 'yyyy-mm-dd',
                autoclose:true
            });
            $('#toDate').datepicker({
                format: 'yyyy-mm-dd',
                autoclose: true
            });

            $('#btnView').click(function () {
                $('#total').val('');
                var fromDate = $('#fromDate').val();
                var toDate = $('#toDate').val();
                var client = $('#client').val();
                var employee = $('#employee').val();
                $('#dvLoader').show();
                $.ajax({
                    url: "/EventManagementData/EmployeeWork",
                    type: "POST",
                    data: JSON.stringify({
                        "fdate": fromDate,
                        "tDate": toDate,
                        "clientId": client,
                        "employeeId": employee,
                    }),
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    success: function (json) {
                        if (json.isRedirect) {
                            window.location.href = json.redirectUrl;
                        }
                        else {
                            var data = json.EmployeeWorks;
                            var tr = "";
                            var sl = 0;
                            var total = 0;
                            data.forEach(function (dt)
                            {
                                total += dt.Total;
                                sl++;
                                tr += '<tr>';
                                tr += '<td>' + sl + '</td>';
                                tr += '<td>' + dt.Name + '</td>';
                                tr += '<td>' + dt.AttDate + '</td>';
                                tr += '<td>' + dt.ClientName + '</td>';
                                tr += '<td>' + dt.EventName + '</td>';
                                tr += '<td>' + dt.InTime + '</td>';
                                tr += '<td>' + dt.OutTime + '</td>';
                                tr += '<td>' + dt.TotalHour + '</td>';
                                tr += '<td>' + dt.PerHourRate + '</td>';
                                tr += '<td>' + dt.Total + '</td>';
                                tr += '</tr>';
                            });
                            $("#tBody").html(tr);
                        }
                        $('#dvLoader').hide();
                        $('#total').val(total);
                    }
                });
            });

            //end view
            $('#btnPdf').click(function () {
                $('#total').val('');
                var fromDate = $('#fromDate').val();
                var toDate = $('#toDate').val();
                var transType = $('#transType').val();
                var expenditure = $('#expenditure').val();
                $('#dvLoader').show();
                $.ajax({
                    url: "/EventManagementData/SalariesReportPDF",
                    type: "GET",
                    data: JSON.stringify({
                        "fdate": fromDate,
                        "tDate": toDate,
                        "transType": transType,
                        "employeeId": expenditure,
                    }),
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    success: function (json) {
                        if (json.isRedirect) {
                            window.location.href = json.redirectUrl;
                        }
                        $('#dvLoader').hide();
                    }
                });
            });
            //end pdf
        });

    </script>
}