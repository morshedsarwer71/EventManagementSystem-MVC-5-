@model EventManagement.Areas.EventManagement.ViewModels.TransactionViewModels

<section class="content-header">
    <h1>
        Petty Cash In Hand
        <small>preview of petty cash in hand</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
        <li><a href="#">Account</a></li>
        <li class="active">Client Payment</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-body">
                    @{ var sl = 0;}
                    <table class="table table-bordered">
                        <thead>
                            <tr>

                                <th>Cash In Hand</th>
                                <th>Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ResponsePettyCash)
                            {
                                sl++;
                                <tr>
                                    <td>Total Cash In Hand</td>
                                    <td>@item.Amount</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->

    </div>
</section>