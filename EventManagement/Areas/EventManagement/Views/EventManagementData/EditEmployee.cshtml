@model EventManagement.Areas.EventManagement.ViewModels.EmployeeViewModels
<section class="content-header">
    <h1>
        Add Employee
        <small>adding new employee information</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("#")"><i class="fa fa-dashboard"></i> Home</a></li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="box">
            <!-- /.box-header -->
            <div class="box-body">
                <div class="col-md-8 col-sm-8">
                    @using (Html.BeginForm("EditEmployee", "EventManagementData", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="col-form-label">Employee Code</label>
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input type="text" value="@Model.Employee.EmployeeCode" readonly="readonly" class="form-control" name="EmployeeCode">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="col-form-label">Employee First Name <span style="color:red;"> *</span></label>
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input type="text" value="@Model.Employee.FirstName" class="form-control" name="FirstName">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="col-form-label">Employee Last Name <span style="color:red;"> *</span></label>
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input type="text" value="@Model.Employee.LastName" class="form-control" name="LastName">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="col-form-label">Employee Nick Name <span style="color:red;"> *</span></label>
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input type="text" value="@Model.Employee.LastName" class="form-control" name="NickName">
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="col-form-label">Employee Email <span style="color:red;"> *</span></label>
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input type="text" value="@Model.Employee.EmployeeEmail" class="form-control" name="EmployeeEmail">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="col-form-label">Employee Contact Number <span style="color:red;"> *</span></label>
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input type="text" value="@Model.Employee.ContactNumber" class="form-control" name="ContactNumber">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="col-form-label">Employee Emergency Number <span style="color:red;"> *</span></label>
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input type="text" value="@Model.Employee.EmergencyNumber" class="form-control" name="EmergencyNumber">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="col-form-label">Employee Date Of Birth <span style="color:red;"> *</span></label>
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input type="text" class="form-control" value="@Model.Employee.DateOfBirth.ToShortDateString()" name="DateOfBirth" id="dateOfBirth">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="col-form-label">Employee Passport Number <span style="color:red;"> *</span></label>
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input type="text" value="@Model.Employee.PassportNumber" class="form-control" name="PassportNumber">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="col-form-label">Employee Passport Exp. Date <span style="color:red;"> *</span></label>
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input type="text" value="@Model.Employee.PassportExpiratationDate.ToShortDateString()" class="form-control" name="PassportExpiratationDate" id="passportExpiratationDate">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="col-form-label">Employee NID Number <span style="color:red;"> *</span></label>
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input type="text" value="@Model.Employee.NIDNumber" class="form-control" name="NIDNumber">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="col-form-label">Employee Visa Number <span style="color:red;"> *</span></label>
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input type="text" value="@Model.Employee.VisaNumber" class="form-control" name="VisaNumber">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="col-form-label">Employee Visa Exp. Date <span style="color:red;"> *</span></label>
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input type="text" value="@Model.Employee.VisaExpirationDate.ToShortDateString()" class="form-control" name="VisaExpirationDate" id="visaExpirationDate">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="col-form-label">Employee Nationality <span style="color:red;"> *</span></label>
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input type="text" value="@Model.Employee.Nationality" class="form-control" name="Nationality">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="col-form-label">Employee Entitlement <span style="color:red;"> *</span></label>
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <select class="form-control" name="EmployeeEntitlementId">
                                        @foreach (var item in Model.Entitlements)
                                        {
                                            if (item.EntitlementId == Model.Employee.EmployeeEntitlementId)
                                            {
                                                <option selected="selected" value="@item.EntitlementId">@item.EmployeeTypeEN</option>
                                            }
                                            else
                                            {
                                                <option value="@item.EntitlementId">@item.EmployeeTypeEN</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="col-form-label">Employee Monthly Salary <span style="color:red;"> *</span></label>
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input type="text" value="@Model.Employee.MonthlySalary" class="form-control" name="MonthlySalary">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="col-form-label">Employee Rate Per Hour <span style="color:red;"> *</span></label>
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input type="text" value="@Model.Employee.RatePerHour" class="form-control" name="RatePerHour">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="col-form-label">Employee IsActive <span style="color:red;"> *</span></label>
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <select class="form-control" name="IsActive">
                                        @foreach (var item in Model.IsActives)
                                        {
                                            if (item.Id == Model.Employee.IsActive)
                                            {
                                                <option selected="selected" value="@item.Id">@item.Name</option>
                                            }
                                            else
                                            {
                                                <option value="@item.Id">@item.Name</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="col-form-label">Employee Image <span style="color:red;"> *</span></label>
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-male"></i>
                                    </div>
                                    <div><img src="@Url.Content(Model.Employee.EmployeeImagePath)" width="100" height="80" /></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="col-form-label">Employee Pass. Image <span style="color:red;"> *</span></label>
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-male"></i>
                                    </div>
                                    <div><img src="@Url.Content(Model.Employee.PassportImagePath)" width="100" height="80" /></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="col-form-label">Employee Image <span style="color:red;"> *</span></label>
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input type="file" name="ImageUrl" />
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="col-form-label">Employee Pass. Image <span style="color:red;"> *</span></label>
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input type="file" name="PassportUrl">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="col-form-label">Employee Present Address <span style="color:red;"> *</span></label>
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <textarea class="form-control" name="PresentAddress">@Model.Employee.PresentAddress</textarea>
                                </div>
                            </div>

                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="col-form-label">Employee Permanent Address <span style="color:red;"> *</span></label>
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <textarea class="form-control" name="PermanentAddress">@Model.Employee.PermanentAddress</textarea>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="col-form-label">Employee Provider Company <span style="color:red;"> *</span></label>
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <textarea class="form-control" name="ProviderCompany">@Model.Employee.ProviderCompany</textarea>
                                </div>
                            </div>

                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="col-form-label">Employee Supplier <span style="color:red;"> *</span></label>
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <select class="form-control" name="ManpowerSupplierId">
                                        @foreach (var item in Model.ManpowerSuppliers)
                                        {
                                            if (Model.Employee.ManpowerSupplierId == item.ManpowerSupplierId)
                                            {
                                                <option selected="selected" value="@item.ManpowerSupplierId">@item.Name</option>
                                            }
                                            else
                                            {
                                                <option value="@item.ManpowerSupplierId">@item.Name</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <button type="submit" value="submit" class="btn btn-primary"><i class="fa fa-plus"></i> NEW EMPLOYEE</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

    </div>
</section>