<section class="content">
    <div id="dvLoader" class="LoadingDiv" style="display: none; margin-top:150px;margin-top:50px;">
        <center>
            <img src="~/Content/img/ajax-loader.gif" alt="Loading" />
        </center>
    </div>
    <div class="row">
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Employee info</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <ul class="nav nav-tabs">
                    <li class="active"><a data-toggle="tab" href="#firstTab">Index</a></li>
                    <li><a data-toggle="tab" href="#secondTab">Add New</a></li>
                </ul>
                <div class="tab-content">
                    <div id="firstTab" class="tab-pane fade in active">@Html.Action("Employees")</div>
                    <div id="secondTab" class="tab-pane fade in">@Html.Action("AddEmployee")</div>
                </div>
            </div>
        </div>
        <!-- /.box -->
        <!-- /.col -->

    </div>
</section>
@section Scripts{
    <script src="~/Content/bower_components/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
    <script>
        $(document).ready(function ()
        {
            $('#dateOfBirth').datepicker({
                format: 'yyyy-mm-dd',
                //startYear: '-10y'
            });
            $('#passportExpiratationDate').datepicker({
                format: 'yyyy-mm-dd',
                //startYear: '-10y'
            });
            $('#visaExpirationDate').datepicker({
                format: 'yyyy-mm-dd',
                //startYear: '-10y'
            });
        });
    </script>
}