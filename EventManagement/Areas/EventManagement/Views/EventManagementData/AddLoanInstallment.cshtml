@model IEnumerable<EventManagement.Areas.EventManagement.Models.Lender>
    @{
    Layout = null;
    }
    <section class="content-header">
        <h1>
            Add Loan Installment
            <small>adding new Loan Installment</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="@Url.Action(" #")"><i class="fa fa-dashboard"></i> Home</a></li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="box">
                <!-- /.box-header -->
                <div class="box-body">
                    @using (Html.BeginForm("AddLoanInstallment", "EventManagementData", FormMethod.Post))
                    {
                    <div class="col-md-6 col-sm-8">
                        <div class="form-group">
                            <label class="col-form-label">Lender</label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <select class="form-control" name="LenderId">
                                    @foreach (var item in Model)
                                    {
                                    <option value="@item.LenderId">@item.LenderName</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-form-label">Installment Date</label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <input type="text" class="form-control" name="InstallmentDate" id="loanDate">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-form-label">Installment Amount</label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <input type="text" class="form-control" name="InstallmentAmount">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-form-label">Description</label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <textarea class="form-control" name="Description"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" value="submit" class="btn btn-primary"><i class="fa fa-plus"></i> ADD</button>
                        </div>

                    </div>
                    }
                </div>
            </div>
        </div>
    </section>
