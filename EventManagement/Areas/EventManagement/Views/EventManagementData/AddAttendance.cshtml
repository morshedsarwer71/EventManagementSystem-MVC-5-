@model EventManagement.Areas.EventManagement.Models.WorkOrderChildManpower
@{
    Layout = null;
}
<section class="content-header">
    <h1>
        Attendance
        <small>adding attendance information</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("#")"><i class="fa fa-dashboard"></i> Home</a></li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="box">
            <!-- /.box-header -->
            <div class="box-body">
                @{ var sl = 0;}
                <div class="col-md-8 col-sm-8">
                    @using (Html.BeginForm("AddAttendance", "EventManagementData", FormMethod.Post))
                    {
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="col-form-label">Date <span style="color:red;"> *</span></label>
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input type="text" name="AttendanceDate" class="form-control" id="attDate">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="col-form-label">In Time <span style="color:red;"> *</span></label>
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-clock-o"></i>
                                    </div>
                                    <input type="text" name="InTime" class="form-control timepicker">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="col-form-label">Out Time <span style="color:red;"> *</span></label>
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-clock-o"></i>
                                    </div>
                                    <input type="text" name="OutTime" class="form-control timepicker">
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th style="width: 10px">#</th>
                                        <th>Name</th>
                                        <th>Check Box</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = 0; i < Model.Employee.Count; i++)
                                    {
                                        sl++;
                                        <tr>
                                            <td>@sl</td>
                                            <td>@Model.Employee[i].FirstName @Model.Employee[i].LastName</td>
                                            @Html.HiddenFor(x => x.Employee[i].EmployeeId)
                                            <td>@Html.CheckBoxFor(x => x.Employee[i].IsChecked)</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <div class="form-group">
                                <button type="submit" value="submit" class="btn btn-primary"><i class="fa fa-plus"></i> ATTENDANCE</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

    </div>
</section>