@model IEnumerable<EventManagement.Areas.EventManagement.Models.EmployeeEntitlement>
@{
    Layout = null;
}
<section class="content-header">
    <h1>
        Add Expenditure Head
        <small>adding new expenditure head information</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("#")"><i class="fa fa-dashboard"></i> Home</a></li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="box">
            <!-- /.box-header -->
            <div class="box-body">
                <div class="col-md-6 col-sm-6">
                    @using (Html.BeginForm("AddExpenditureHead", "EventManagementData", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="form-group">
                            <label class="col-form-label">Expenditure Head EN</label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <input type="text" class="form-control" name="ExpenditureHeadEN">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-form-label">Expenditure Head AR <span style="color:red;"> *</span></label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <input type="text" class="form-control" name="ExpenditureHeadAR">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-form-label">Description <span style="color:red;"> *</span></label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <textarea class="form-control" name="Description"></textarea>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-group">
                                <button type="submit" value="submit" class="btn btn-primary"><i class="fa fa-plus"></i> EXPENDITURE</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

    </div>
</section>