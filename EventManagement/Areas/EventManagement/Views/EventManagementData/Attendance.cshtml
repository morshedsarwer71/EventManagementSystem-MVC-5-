<section class="content">
    <div id="dvLoader" class="LoadingDiv" style="display: none; margin-top:150px;margin-top:50px;">
        <center>
            <img src="~/Content/img/ajax-loader.gif" alt="Loading" />
        </center>
    </div>
    <div class="row">
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Employee info</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <ul class="nav nav-tabs">
                    <li class="active"><a data-toggle="tab" href="#firstTab">Index</a></li>
                    <li><a data-toggle="tab" href="#secondTab">Add New</a></li>
                </ul>
                <div class="tab-content">
                    <div id="firstTab" class="tab-pane fade in active">@Html.Action("Attendances")</div>
                    <div id="secondTab" class="tab-pane fade in">@Html.Action("AddAttendance")</div>
                </div>
            </div>
        </div>
        <!-- /.box -->
        <!-- /.col -->

    </div>
</section>
@section Scripts{
    <script src="~/Content/bower_components/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
    <script src="~/Content/bower_components/timepicker/bootstrap-timepicker.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#attDate').datepicker({
                format: 'yyyy-mm-dd',
                autoclose: true
                //startYear: '-10y'
            });
            $('#attDate1').datepicker({
                format: 'yyyy-mm-dd',
                autoclose: true
                //startYear: '-10y'
            });
            $('#attDate2').datepicker({
                format: 'yyyy-mm-dd',
                autoclose: true
                //startYear: '-10y'
            });
            $('.timepicker').timepicker({
                showInputs: false
            });           

        });
    </script>
    <script>
        function valDelete(valId) {
            var result = confirm("Do you want to delete this attendance");
            if (result) {
                $('#dvLoader').show();
                $.ajax({
                    url: "/EventManagementData/DeleteAttendance?id=" + valId,
                    type: "POST",
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    success: function (json) {
                        if (json.isRedirect) {
                            window.location.href = json.redirectUrl;
                        }
                        $('#dvLoader').hide();
                    }
                });
            }
        };
    </script>

}