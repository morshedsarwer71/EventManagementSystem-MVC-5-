@model EventManagement.Areas.EventManagement.ViewModels.TransactionViewModels
@{
    Layout = null;
}
<section class="content-header">
    <h1>
        Add Salary
        <small>adding new salary information</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("#")"><i class="fa fa-dashboard"></i> Home</a></li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="box">
            <!-- /.box-header -->
            <div class="box-body">
                <div class="col-md-6 col-sm-6">
                    <div class="form-group">
                        <label class="col-form-label">Employee</label>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                            </div>
                            <select class="form-control" id="employeeId">
                                @foreach (var item in Model.Employees)
                                {
                                    <option value="@item.EmployeeId">@item.FirstName @item.LastName</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-form-label">Salary Type<span style="color:red;"> *</span></label>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                            </div>
                            <select class="form-control" id="salaryTypeId">
                                @foreach (var item in Model.SalaryTypes)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-form-label">Payment Date <span style="color:red;"> *</span></label>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                            </div>
                            <input type="text" class="form-control" id="paymentDate" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-form-label">Transaction Type<span style="color:red;"> *</span></label>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                            </div>
                            <select class="form-control" id="transactionTypeId">
                                @foreach (var item in Model.TransactionTypes)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-form-label">Payment Amount <span style="color:red;"> *</span></label>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                            </div>
                            <input type="text" class="form-control" id="amount"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-form-label">Salary/Wages Month <span style="color:red;"> *</span></label>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                            </div>
                            <input type="text" class="form-control" id="salaryMonth"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-form-label">Description <span style="color:red;"> *</span></label>
                        <div class="input-group">
                            <div class="input-group-addon">
                                <i class="fa fa-calendar"></i>
                            </div>
                            <textarea class="form-control" id="description"></textarea>
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="form-group">
                            <button type="submit" value="submit" id="btnSubmit" class="btn btn-primary"><i class="fa fa-plus"></i> EXPENDITURE</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>