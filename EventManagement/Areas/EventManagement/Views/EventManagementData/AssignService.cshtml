@model EventManagement.Areas.EventManagement.Models.WorkOrderChildService
<section class="content-header">
    <h1>
        Services
        <small>adding order service</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("#")"><i class="fa fa-dashboard"></i> Home</a></li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div id="dvLoader" class="LoadingDiv" style="display: none; margin-top:150px;margin-top:50px;">
        <center>
            <img src="~/Content/img/ajax-loader.gif" alt="Loading" />
        </center>
    </div>
    <div class="row">
        <div class="box">
            <!-- /.box-header -->
            <div class="box-body">
                <div class="col-md-6 col-sm-8">
                    @{ var sl = 0;}
                    @using (Html.BeginForm("AssignService", "EventManagementData", FormMethod.Post))

                    {

                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th style="width: 10px">#</th>
                                    <th>Name</th>
                                    <th>Check Box</th>
                                </tr>
                            </thead>
                            <tbody>

                                @for (int i = 0; i < Model.EventService.Count; i++)
                                {
                                    sl++;
                                    <tr>
                                        <td>@sl</td>
                                        <td>@Model.EventService[i].EventServiceEN</td>
                                        @Html.HiddenFor(x => x.EventService[i].EventServiceId)
                                        <td class="text-center">@Html.CheckBoxFor(x => x.EventService[i].IsChecked)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="form-group">
                            <button type="submit" value="submit" class="btn btn-primary"><i class="fa fa-plus"></i> SERVICE</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>